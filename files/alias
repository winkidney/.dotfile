# git basic
alias gweeklog='git log master --author `git config --get user.name` --since "1 week ago" --oneline | tac'
alias glist='git log --oneline'
alias gst='git status'
alias gco='git checkout'
alias grmb='git branch --merged | grep -v \* | xargs git branch -D'
alias gnpick='git log --left-right --graph --cherry-pick --oneline'
alias gtree='git -c core.pager="less -SRF" log --oneline --graph --decorate'
alias gca="git commit --amend"
alias gci="git commit"

# git update/fetch
alias gup="git pull --rebase"
alias gfr="git fetch origin master;git rebase FETCH_HEAD"

# git branch
alias gb="git branch"
alias gba='git branch -a'
alias gbnm='git branch --no-merged'
alias gbr='git branch --remote'

# review tools
alias grt="git review -t"

# git log
alias gls="git log --stat"

# git tools
alias gcd="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"

# node tools
alias cnpm="npm --registry=https://registry.npm.taobao.org \
--cache=$HOME/.npm/.cache/cnpm \
--disturl=https://npm.taobao.org/dist \
--userconfig=$HOME/.cnpmrc"

# Emacs alias
emacsclient -a "" -t "$@"

